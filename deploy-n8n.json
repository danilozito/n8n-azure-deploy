{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "baseName": {
      "type": "string",
      "defaultValue": "n8n",
      "metadata": {
        "description": "Nome base utilizzato per risorse come storage, file share e container group."
      }
    },
    "n8nUsername": {
      "type": "string",
      "defaultValue": "admin",
      "metadata": {
        "description": "Nome utente per l'autenticazione di base (Basic Auth)."
      }
    },
    "n8nPassword": {
      "type": "securestring",
      "defaultValue": "n8n-default-pwd",
      "metadata": {
        "description": "Password per l'autenticazione di base (Basic Auth). Il valore predefinito Ã¨ fornito per consentire il deployment rapido tramite il pulsante 'Deploy to Azure', ma si raccomanda vivamente di modificarlo in produzione."
      }
    },
    "fileShareQuotaGB": {
      "type": "int",
      "defaultValue": 5,
      "minValue": 1,
      "maxValue": 5120,
      "metadata": {
        "description": "Dimensione in GB del file share per i dati di n8n."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "westeurope",
      "metadata": {
        "description": "Regione in cui distribuire le risorse."
      }
    }
  },
  "variables": {
    "storageAccountName": "[toLower(concat(parameters('baseName'), uniqueString(resourceGroup().id), 'storage'))]",
    "fileShareName": "n8n-data",
    "containerGroupName": "[concat(parameters('baseName'), '-container-group')]",
    "dnsNameLabel": "[concat(parameters('baseName'), '-dns')]",
    "tags": {
      "application": "n8n",
      "environment": "production",
      "managed-by": "arm-template"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2019-06-01",
      "name": "[variables('storageAccountName')]",
      "location": "[parameters('location')]",
      "tags": "[variables('tags')]",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "StorageV2",
      "properties": {
        "minimumTlsVersion": "TLS1_2",
        "supportsHttpsTrafficOnly": true,
        "encryption": {
          "services": {
            "file": {
              "enabled": true
            }
          },
          "keySource": "Microsoft.Storage"
        }
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts/fileServices/shares",
      "apiVersion": "2019-06-01",
      "name": "[format('{0}/default/{1}', variables('storageAccountName'), variables('fileShareName'))]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
      ],
      "properties": {
        "shareQuota": "[parameters('fileShareQuotaGB')]"
      }
    },
    {
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2021-07-01",
      "name": "[variables('containerGroupName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts/fileServices/shares', variables('storageAccountName'), 'default', variables('fileShareName'))]"
      ],
      "tags": "[variables('tags')]",
      "properties": {
        "containers": [
          {
            "name": "n8n",
            "properties": {
              "image": "n8nio/n8n:latest",
              "resources": {
                "requests": {
                  "cpu": 0.5,
                  "memoryInGB": 1.5
                },
                "limits": {
                  "cpu": 1.0,
                  "memoryInGB": 2
                }
              },
              "environmentVariables": [
                {
                  "name": "N8N_BASIC_AUTH_ACTIVE",
                  "value": "true"
                },
                {
                  "name": "N8N_BASIC_AUTH_USER",
                  "value": "[parameters('n8nUsername')]"
                },
                {
                  "name": "N8N_BASIC_AUTH_PASSWORD",
                  "secureValue": "[parameters('n8nPassword')]"
                },
                {
                  "name": "GENERIC_TIMEZONE",
                  "value": "Europe/Rome"
                },
                {
                  "name": "TZ",
                  "value": "Europe/Rome"
                },
                {
                  "name": "N8N_PROTOCOL",
                  "value": "https"
                },
                {
                  "name": "N8N_HOST",
                  "value": "[concat(variables('dnsNameLabel'), '.', parameters('location'), '.azurecontainer.io')]"
                },
                {
                  "name": "NODE_ENV",
                  "value": "production"
                }
              ],
              "volumeMounts": [
                {
                  "name": "n8n-data-volume",
                  "mountPath": "/home/node/.n8n"
                }
              ],
              "ports": [
                {
                  "port": 5678,
                  "protocol": "TCP"
                }
              ],
              "livenessProbe": {
                "httpGet": {
                  "path": "/",
                  "port": 5678
                },
                "initialDelaySeconds": 30,
                "periodSeconds": 30
              },
              "readinessProbe": {
                "httpGet": {
                  "path": "/",
                  "port": 5678
                },
                "initialDelaySeconds": 15,
                "periodSeconds": 10
              }
            }
          },
          {
            "name": "caddy-ssl-server",
            "properties": {
              "image": "caddy:latest",
              "command": [
                "caddy",
                "reverse-proxy",
                "--from",
                "[variables('dnsNameLabel')]",
                "--to",
                "localhost:5678",
                "--header-up",
                "X-Frame-Options \"SAMEORIGIN\"",
                "--header-up",
                "X-Content-Type-Options \"nosniff\"",
                "--header-up",
                "Referrer-Policy \"strict-origin-when-cross-origin\"",
                "--header-up",
                "Strict-Transport-Security \"max-age=31536000; includeSubDomains\""
              ],
              "ports": [
                {
                  "protocol": "TCP",
                  "port": 443
                },
                {
                  "protocol": "TCP",
                  "port": 80
                }
              ],
              "resources": {
                "requests": {
                  "memoryInGB": 0.5,
                  "cpu": 0.5
                }
              },
              "volumeMounts": [
                {
                  "name": "data",
                  "mountPath": "/data"
                },
                {
                  "name": "config",
                  "mountPath": "/config"
                }
              ]
            }
          }
        ],
        "volumes": [
          {
            "name": "n8n-data-volume",
            "azureFile": {
              "shareName": "[variables('fileShareName')]",
              "storageAccountName": "[variables('storageAccountName')]",
              "storageAccountKey": "[listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2019-06-01').keys[0].value]"
            }
          },
          {
            "name": "data",
            "emptyDir": {}
          },
          {
            "name": "config",
            "emptyDir": {}
          }
        ],
        "osType": "Linux",
        "ipAddress": {
          "type": "Public",
          "dnsNameLabel": "[variables('dnsNameLabel')]",
          "ports": [
            {
              "port": 80,
              "protocol": "TCP"
            },
            {
              "port": 443,
              "protocol": "TCP"
            },
            {
              "port": 5678,
              "protocol": "TCP"
            }
          ]
        },
        "restartPolicy": "OnFailure"
      }
    }
  ]
}
